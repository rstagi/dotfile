# Terraform
alias tf="terraform"
alias tfi="terraform init"
alias tfa="terraform apply --parallelism=100"
alias tfu="terraform force-unlock"
alias tfp="terraform plan"
alias tfd="terraform destroy"
alias tfw="terraform workspace"
alias tfws="terraform workspace select"
alias tfwl="terraform workspace list"
alias tfwnew="terraform workspace new"
alias tfwrm="terraform workspace delete"
alias tfo="terraform output"
alias tfv="terraform validate"
alias tfc="terraform console"
alias tfgr="terraform graph | dot -Tpng > graph.png"

# Enable Terraform autocompletion
autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C /opt/homebrew/bin/terraform terraform
